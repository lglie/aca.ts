export class $Request {
  constructor(fetch: any, url: string) {
    if (!url) throw `没有url参数，请在生成的api目录的index.ts中填写`
    this.fetch = fetch
    this.url = url
  }

  private fetch
  private url = ''
  private requestInit = {
    method: 'post',
  }

  public async req(args: any) {
    const res = await this.fetch(this.url, {
      ...this.requestInit,
      data: args,
    })
    return res.data
  }
}
