// 该工具目前处于内测阶段，bug暂时提交：liaoguolie@gmail.com
// 注：所有的标识符不得以$开头，以防命名冲突
// 类成员支持的标量类型：id, int, bigint, float, string, object(键值对), Date，及自定义枚举类型
import {
  id,
  int,
  float,
  $db, // 数据库连接配置类型
  $, // 类装饰器,
  $_, // 成员装饰器
} from './.misc/.orm'

enum Gender {
  Male,
  Fomale,
  Unkown,
}

// 数据库类
namespace Blog {
  // 每个数据库类最多只有一个const，并且类型为：$db
  // 其值指向config.json/database中的同名字段，默认为: default
  const dbConfig: $db = 'default'

  @$.unique(['firstName', 'lastName'])
  class user {
    id: id
    firstName: string
    lastName: string
    gender = Gender.Male
    age: int = 25
    married: boolean = true
    detail?: object // json
    // 时间戳
    @$_.createdAt created_at?: Date
    // @$_.updatedAt updated_at: Date // 暂不支持
    profile?: profile // 一对一
    posts: ns.post[] // 一对多
    comments: comment[] // 多对多
  }

  @$.map('PROF') // 映射数据库表名
  class profile {
    id: id
    // 数据库支持的类型
    @$_.dbType('char(8)') password: string
    // 外键
    @$_.foreign('userId')
    user: user
  }

  // 支持多级命名空间
  namespace ns {
    enum KindEnum {
      Political,
      Economy,
    }

    export class post {
      serial: id
      enum?: KindEnum
      content: string
      score: float
      @$_.foreign({
        keys: ['firstNameId', 'lastNameId'],
        references: ['firstName', 'lastName'],
        onUpdate: 'cascade',
        onDelete: 'cascade',
      })
      author: user
      // 如果两个表之间存在一个以上的关系，则其余关系必须指明关系字段
      //像下面这样：
      // @ts-ignore
      comments: comment['post'][]
      categories: category[]
    }

    export class category {
      id: id
      // unique, index 约束
      @$_.unique @$_.index name: string
      posts: post[]
      // 自关系
      @$_.foreign('categoriesId') parent?: category
      children: category[]
      comments: comment[]
    }
  }

  export class comment {
    // 可以指定5种id类型
    id: id['autoincrement']
    topEnum = Gender.Fomale
    rating: string
    category: ns.category[]
    commenter: user[]
    //@ts-ignore
    @$_.foreign('postsId') post: ns.post['comments']
    date: Date = new Date()
  }
}
